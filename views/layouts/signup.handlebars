<div class="row justify-space-between-md">
  <div class="signup-card">
    <h2 class="page-title">Sign Up</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input
          class="form-input"
          type="text"
          id="username-signup"
          minlength="4"
          required
        />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input
          class="form-input"
          type="password"
          id="password-signup"
          minlength="8"
          required
        />
      </div>
      <div class="form-group">
        <label for="password-signup">Confirm Password:</label>
        <input
          class="form-input"
          type="password"
          id="password-confirm-signup"
          minlength="8"
          required
        />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Sign Up</button>
      </div>
    </form>
  </div>
</div>
<script src="/js/signup2.js"></script>
