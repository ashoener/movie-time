<h1 class="display-1 text-center">Watchlist</h1>
<div class="d-flex flex-row">
  {{#each savedMovies}}
    <div class="card container d-inline-flex col-sm-4 overflow-hidden">
      <div class="card-header">
        {{this.title}}
      </div>
      <img
        src="{{getTMDBImageUrl this.backdrop_path}}"
        class="card-img-top"
        alt="movie poster"
      />
      <div class="card-body">
        <p class="card-text">runtime: {{this.runtime}}min </p>
        <p class="card-text">genres: {{this.genres}}</p>
      </div>
    </div>
  {{/each}}
</div>